import String
import Memory

File
	class.readBytesDefault = 1024
	
	init self.fileName
		self.fd : Int
		
	open
		self.fd = sys.open(self.fileName)
		
	close
		sys.close self.fd
		
	write data
		sys.write self.fd, data
		
	read bytes = class.readBytesDefault
		buffer = MemPointer(Byte, bytes)
		sys.read self.fd, buffer
		return buffer
